<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="T_Zoo_OB_Spect.Controls.MainPageHeader"
             xmlns:HEADERCUIX="clr-namespace:T_Zoo_OB_Spect.Controls">
    <HorizontalStackLayout>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="150"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Image InputTransparent="True" Opacity="1" Source="banner.png" ZIndex="0" Grid.ColumnSpan="2" Aspect="AspectFill"/>

            <HEADERCUIX:AdvImgBtn Grid.Column="0" ZIndex="1"/>
            <!--<BoxView Grid.Column="0" BackgroundColor="Aqua"/> THIS IS NOT WAI-->
            <HorizontalStackLayout ZIndex="1" Grid.Column="1" Margin="5">
                <HEADERCUIX:OutbackAdventureButton/>
                <HEADERCUIX:OutbackAdventureButton/>
                <HEADERCUIX:OutbackAdventureButton/>
                <HEADERCUIX:OutbackAdventureButton/>
                <HEADERCUIX:OutbackAdventureButton/>
            </HorizontalStackLayout>
            <!--The rest of Custom header UIX-->
        </Grid>
    </HorizontalStackLayout>
</ContentView>
